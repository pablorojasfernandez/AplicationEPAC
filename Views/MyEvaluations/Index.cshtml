@model IEnumerable<AplicationEPAC.Models.Evaluation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Announcement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvgTheoryMark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvgPracticalMark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinalMark)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Announcement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvgTheoryMark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvgPracticalMark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinalMark)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
